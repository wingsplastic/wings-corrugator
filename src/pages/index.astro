  const allPosts = [
    ...technicalArticles.map(post => ({
      ...post,
      category: 'Technical Articles',
      url: `/technical-articles/${post.frontmatter.slug || post.file.split('/').pop()?.replace('.md', '')}`,
    })),
    ...companyNews.map(post => ({
      ...post,
      category: 'Company News',
      url: `/company-news/${post.frontmatter.slug || post.file.split('/').pop()?.replace('.md', '')}`,
    })),
  ];

  allPosts.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
  latestPosts = allPosts.slice(0, 3);
} catch (e) {
