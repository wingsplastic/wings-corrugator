<script>
  (function() {
    // ËΩÆÊí≠ÂäüËÉΩ
    const container = document.getElementById('carouselContainer');
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.getElementById('prevArrow');
    const nextBtn = document.getElementById('nextArrow');

    if (container && slides.length > 0) {
      let currentIndex = 0;
      const totalSlides = slides.length;

      function updateSlide(index) {
        if (index < 0) index = totalSlides - 1;
        if (index >= totalSlides) index = 0;
        currentIndex = index;
        container.style.transform = `translateX(-${currentIndex * 50}%)`;
        dots.forEach((dot, i) => {
          if (i === currentIndex) dot.classList.add('active');
          else dot.classList.remove('active');
        });
      }

      if (prevBtn) prevBtn.addEventListener('click', () => updateSlide(currentIndex - 1));
      if (nextBtn) nextBtn.addEventListener('click', () => updateSlide(currentIndex + 1));
      dots.forEach((dot, idx) => {
        dot.addEventListener('click', () => updateSlide(idx));
      });
    }

    // ËØÅ‰π¶ÁÇπÂáªÊîæÂ§ßÔºàÊ®°ÊÄÅÊ°ÜÔºâ
    const modal = document.getElementById('modal');
    const modalImg = document.getElementById('modal-img');
    const certs = document.querySelectorAll('.cert-img');

    function openModal(src) {
      modal.style.display = 'block';
      modalImg.src = src;
    }

    function closeModal() {
      modal.style.display = 'none';
    }

    certs.forEach(cert => {
      cert.addEventListener('click', (e) => {
        e.stopPropagation();
        const fullSrc = cert.dataset.full || cert.src;
        openModal(fullSrc);
      });
    });

    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
    window.closeModal = closeModal;

    // Ë°®ÂçïÊèê‰∫§Â§ÑÁêÜÔºàHoneypot Èò≤Êú∫Âô®‰∫∫Ôºâ
