  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }
  .footer-links a {
    color: #94a3b8;
    text-decoration: none;
    transition: color 0.2s;
    font-size: 0.95rem;
  }
