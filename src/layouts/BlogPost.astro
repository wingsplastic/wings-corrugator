---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<Layout title={title} description={description}>
	<article class="py-16 bg-gray-50">
        <div class="container mx-auto px-4 max-w-4xl">
            {heroImage && <img width={1020} height={510} src={heroImage} alt="" class="rounded-lg shadow-lg mb-8" />}
            
            <div class="bg-white p-8 md:p-12 rounded-lg shadow-sm">
                <div class="mb-6 text-center">
                    <div class="text-gray-500 mb-2">
                        {pubDate.toLocaleDateString('en-us', { year: 'numeric', month: 'short', day: 'numeric', })}
                    </div>
                    <h1 class="text-4xl font-bold text-gray-900 mb-4">{title}</h1>
                    <hr class="border-gray-200" />
                </div>
                
                <div class="prose prose-lg max-w-none hover:prose-a:text-blue-600">
                    <slot />
                </div>
            </div>
        </div>
	</article>
</Layout>